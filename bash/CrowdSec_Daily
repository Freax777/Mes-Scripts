#!/bin/bash
#Variables
DATA="/home/freax/crowdsec"
NAME=$(date +%Y%m%d-%H%M%S)
#FIN
mkdir ${DATA}
cscli alerts list > ${DATA}/alerts.txt
cscli decisions list > ${DATA}/decisions.txt
check=$(cat ${DATA}/decisions.txt | wc -l)
    
    if [ ${check} -gt 1 ]
        then
        file="-A ${DATA}/decisions.txt"
        else
   	    false
    fi

echo "Crowdsec : ${NAME} Alerts et DÃ©cision du jours"| mail -s "CROWDSEC" backup.freax@gmail.com -A ${DATA}/alerts.txt ${file}
rm -r ${DATA}
