#!/bin/bash
#Envoie toutes les décisions et alerts crowdsec par mail.
#Variables
DATA="/tmp/crowdsec"
NAME=$(date +%Y%m%d-%H%M%S)
#FIN
mkdir ${DATA}
cscli alerts list > ${DATA}/alerts.txt
cscli decisions list > ${DATA}/decisions.txt
echo "Crowdsec : ${NAME} Alerts et Décisions du jour"| mail -s "CROWDSEC" mail@gmail.com -A ${DATA}/alerts.txt -A ${DATA}/decisions.txt
rm -r ${DATA}
